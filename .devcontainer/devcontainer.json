{
  "name": "Vue CLI Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "vue-app",
  "workspaceFolder": "/app",

  // VS Code settings mặc định trong container
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh"
  },

  // Các extension khuyên dùng cho Vue 3 + ESLint
  "extensions": [
    "dbaeumer.vscode-eslint",
    "Vue.volar", // thay thế Vetur cho Vue 3
    "Vue.vscode-typescript-vue-plugin"
  ],

  // Forward port cho Vue CLI dev server
  "forwardPorts": [8080],

  // Chạy sau khi container được tạo
  "postCreateCommand": "npm install",

  // Dùng user "node" thay vì root
  "remoteUser": "node"
}
