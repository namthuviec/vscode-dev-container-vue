{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Project",
      "type": "shell",
      "command": "npm run serve",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "ERROR in (.*)",
              "file": 1,
              "message": 0
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting development server",
            "endsPattern": "App running at"
          }
        }
      ]
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "npm run build",
      "group": {
        "kind": "build"
      },
      "isBackground": false,
      "problemMatcher": [
        "$tsc" // nếu bạn dùng TypeScript, VS Code sẽ highlight lỗi
      ]
    },
    {
      "label": "Create New Project",
      "type": "shell",
      "command": "vue create .",
      "isBackground": false,
      "problemMatcher": []
    }
  ]
}
